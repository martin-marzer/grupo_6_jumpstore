<!DOCTYPE html>
<html lang="en">
<head>

    <title>Home</title>
    <%- include("./partials/head") %>
    <link rel='stylesheet' href='/css/home.css'>
</head>
<body>
    <%- include("./partials/header") %>
    
    <%- include("./partials/menuMobile") %>

    <main>

        <div class="slider">

            <ul>
                <li>
                    <img src="images/contenido-pagina/jordan 1.jpg" alt="Jordan 1 rojas">
                </li>
                <li>
                    <img src="images/contenido-pagina/jordan 4 red fire.jpg" alt="Jordan 4 red fire">
                </li>
                <li>
                    <img src="images/contenido-pagina/jordan travis.jpg" alt="jordan travis scott">
                </li>
                <li>
                    <img src="images/contenido-pagina/addidas-slider.jpg" alt="jordan travis scott">
                </li>

            </ul>

        </div>

        <section class="conteiner-marcas">
            <ul class="slider-logos">
                <li id="nike-logo"> <img class="zoom" src="images/contenido-pagina/nike-logo.png" alt="logo Nike"></li>
                <li id="vans-logo"> <img src="images/contenido-pagina/vans-logo.jpg" alt="logo Vans"></li>
                <li id="adidas-logo"> <img src="images/contenido-pagina/adidas-logo.png" alt="logo Addidas"></li>
                <li id="jordan-logo"> <img src="images/contenido-pagina/jordan-logo.png" alt="logo Air Jordan"></li>
            </ul>
        </section>
        <div class="fondo-universo">
            <div class="wrapper">
                <h1 href="#">Most Sold Sneakers</h1>
            </div>

            <section class="container-hot">
            <% for (let i = 0; i < 1; i++) {%>
            
            <% let articulo = articulos[i] %>

                <div class="image" >
                    <a href="/products/detail/<%= articulo.id %>">
                        <img class="image__img" src="images/zapatillas/nike-mas-vendido.jpg" alt="Nike AIRMAX 97 METALLIC GOLD">
                    </a>
                    <div class="image__overlay image__overlay--primary">
                        <div class="image__title">Nike airmax 97 mettallic gold</div>
                        <p class="image__description">
                            $4
                        </p>
                    </div>
                </div>
                <div class="image">
                    <img class="image__img" src="images/zapatillas/adidas-mas-vendidas.jpg" alt="Adidas Yeezy 350v2 CREAM WHITE">
                    <div class="image__overlay image__overlay--primary">
                        <div class="image__title">Adidas Yeezy cream white</div>
                        <p class="image__description">
                            $4
                        </p>
                    </div>
                </div>
                <div class="mode-celuar">
                    <img class="image__img" src="images/zapatillas/jorda-jbalbin.jpeg" alt="Jordan 1 Retro High J Balvin">
                    <div class="image__overlay image__overlay--primary">
                        <div class="image__title">Jordan 1 retro high J Balvin</div>
                        <p class="image__description">
                            $4
                        </p>
                    </div>
                </div>
                <div class="image">
                    <img class="image__img" src="images/zapatillas/vans-mas-vendidas.jpeg" alt="Vans Old Skool PRO Black/Brown">
                    <div class="image__overlay image__overlay--primary">
                        <div class="image__title">Vans old skool black/brown</div>
                        <p class="image__description">
                            $4
                        </p>
                    </div>
                </div>
            <% }; %>
            </section>
            <div class="wrapper">
                <h1 href="#">Newest Drop</h1>
            </div>

            <section class="container-new">

                <div id="Jordan">
                    <img class="image__img" src="images/contenido-pagina/michael-jordan-12.jpg" alt="Michael Jordan">
                </div>
                <div class="mode-celuar">
                    <img class="image__img" src="images/zapatillas/vans-old-skook-pink.jpeg" alt="Vans old skool pink">
                    <div class="image__overlay image__overlay--primary">
                        <div class="image__title">Vans old skool pink</div>
                        <p class="image__description">
                            $4
                        </p>
                    </div>
                </div>
                <div class="image">
                    <img class="image__img" src="images/zapatillas/Nike Sacai Regasus Vaporrly SP Navy Grey White Red Orange.jpeg" alt="Nike Sacai Regasus Vaporrly SP Navy Grey White Red Orange">
                    <div class="image__overlay image__overlay--primary">
                        <div class="image__title">Nike Sacai Regasus Vaporrly</div>
                        <p class="image__description">
                            $4
                        </p>
                    </div>
                </div>
            </section>
    </main>
    
    <%- include("./partials/footer") %>
    <%- include("./partials/scripts") %>
</body>
</html>

